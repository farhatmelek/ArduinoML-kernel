app DualCheckAlarmApp initial state off {
    bricks
        Actuator buzzer: 10
        Sensor button1: 11
        Sensor button2: 12

    states
        off {
            buzzer <= LOW
            (button1 is HIGH AND  button2 is HIGH) => alarm
        }
        alarm {
            buzzer <= HIGH
            (button1 is LOW OR button2 is LOW) => off
        }
}
