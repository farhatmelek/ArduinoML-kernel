app Exception initial state porteFermee {
    bricks
        Sensor button1 : 8
        Sensor button2 : 9
        Actuator redLed : 12
    
    states
        porteOuverte {
            redLed <= LOW
            (button1 is HIGH AND button2 is LOW) => porteFermee
            (button1 is HIGH AND button2 is HIGH) => exceptionState
            
        }
        porteFermee {
            redLed <= LOW
            (button1 is LOW AND button2 is HIGH) => porteOuverte
            (button1 is HIGH AND button2 is HIGH) => exceptionState
        }
        exceptionState {
            exception{
                redLed
                pauseTime 10
                errorNumber 3
            }
            (button1 is LOW AND button2 is HIGH) => porteOuverte
            (button1 is HIGH AND button2 is LOW) => porteFermee
        }
       
}
